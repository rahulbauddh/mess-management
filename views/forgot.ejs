<%- include('partials/header.ejs',{hide: false,user : false}) %>

<div class="card text-center" style="width: 350px;margin-left: 23rem;margin-top: 1rem; background-color: rgb(178, 199, 239);">
    <div class="card-header h5 text-white bg-primary">Password Reset(1/3)</div>
    <div class="card-body px-5">
        <p class="card-text py-2">
            Enter your email address and we'll send you an email with OTP to reset your password.
        </p>
        
        <form action="/forgot" method="post">
            <div data-mdb-input-init class="form-outline">
                <input type="email" id="typeEmail" name="username" class="form-control my-3" required/>
                <label class="form-label" for="typeEmail">Email input</label>
            </div>

            <div class="pt-1 mb-3">
              <button class="btn btn-primary w-100" type="submit">
                Send OTP
              </button>
            </div>
        </form>
    </div>
</div>

