<%- include('partials/header.ejs',{hide: false,user : false}) %>

<div class="card text-center" style="width: 350px;margin-left: 23rem;margin-top: 1rem; background-color: rgb(178, 199, 239);">
    <div class="card-header h5 text-white bg-primary">Password Reset(2/3)</div>
    <div class="card-body px-5">
        <p class="card-text py-2">
            Enter OTP to reset your password.
        </p>
        
        <form action="/verify" method="post">
            <div data-mdb-input-init class="form-outline">
                <input type="text" id="form3Example1c" name="otp" class="form-control my-3" required/>
                <label class="form-label" for="form3Example1c">Enter OTP</label>
            </div>
            <p style="color: red"><%= error %></p>
            <div class="pt-1 mb-3">
              <button class="btn btn-primary w-100" type="submit">
                    Verify
              </button>
            </div>
        </form>
    </div>
</div>

